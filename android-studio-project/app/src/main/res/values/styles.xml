<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="main_activity_style">
        <item name="android:background">#DDDDDD</item>
    </style>
    <style name="filechoser_activity_style">
        <item name="android:background">#EEEEEE</item>
    </style>


    <style name="welcome_to">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#444444</item>
    </style>
    <style name="welcome_to_value">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="welcome_info">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="input_box">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_input_box</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="input_box_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="button">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="share_button">
        <item name="android:background">@drawable/background_share_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:src">@drawable/share_icon</item>
    </style>

    <style name="custom_listview_menu_item_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="custom_listview_menu_item_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
